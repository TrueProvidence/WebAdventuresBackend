@model DotnetMVC.Models.CharacterCampaignViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Characters" asp-action="Index", method="get">
    <p>
        <select asp-for="CharacterCampaign" asp-items="Model.Campaigns">
            <option value="">All</option>
        </select>

        <label>Name: <input type="text" name="SearchString" /></label>
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Characters![0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Characters![0].Campaign)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Characters![0].Health)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Characters![0].Currency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Characters![0].Items)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Characters!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Campaign)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Health)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Currency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Items)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
