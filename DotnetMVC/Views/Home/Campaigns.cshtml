@{
    ViewData["Title"] = "Campaigns[WIP]";
}
<h1>@ViewData["Title"]</h1>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body>
    <div class="container-fluid p-3">
        <div class="row">

            <!-- Left Sidebar -->
            <div class="col-md-3">
                <div class="border p-3 mb-3">
                    <button class="btn btn-primary w-100">Add Campaign</button>
                </div>
                <div class="border p-3 mb-3">
                    <h5>Campaign List</h5>
                    <p>Selecting one prompts a character, then gives confirm button to go to Game Page</p>
                </div>
                <div class="border p-3">
                    <h5>Choose Character</h5>
                    <img src="https://placehold.co/100x100" class="img-fluid rounded" alt="Character Image">
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-6">
                <div class="border p-3 mb-3">
                    <h5>Public Campaigns</h5>
                    <p>Selecting one gives a prompt to add it to Campaign List</p>
                </div>
                <div class="border p-3 mb-3">
                    <h5>Own Campaigns</h5>
                    <p>Opening a campaign gives the option to publish it</p>
                    <button class="btn btn-secondary">Make Campaign</button>
                </div>
            </div>

            <!-- Right Sidebar -->
            <div class="col-md-3">
                <div class="border p-3 mb-3">
                    <a type="button" class="btn btn-danger w-100" asp-controller="Home"asp-action="Index">Save & Exit (to Home Page)</a>
                </div>
                <div class="border p-3">
                    <h5>Character List</h5>
                    <p>Small form. Only appears when Choose Character is clicked.</p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>